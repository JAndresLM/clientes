<openerp>
	<data>
		<record model="ir.ui.view" id="cliente_form_view">
			<field name="name">cliente.form</field>
			<field name="model">clientes.cliente</field>
			<field name="arch" type="xml">
				<form string="Formulario para Clientes">
					<sheet>
						<group>
							<group string="Información">
								<field name="name"/>
								<field name="correo"/>
								<field name="telefono"/>
								<field name="empresa"/>
								<field name="active"/>
							</group>
							<group string="Ubicación">
								<field name="provincia"/>
								<field name="canton"/>
								<field name="distrito"/>
								<field name="otrassenas"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- clientes tree/list view -->
		<record model="ir.ui.view" id="clientes_tree_view">
			<field name="name">cliente.tree</field>
			<field name="model">clientes.cliente</field>
			<field name="arch" type="xml">
				<tree string="Lista de Clientes">
					<field name="name"/>
					<field name="telefono"/>
					<field name="correo"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="cliente_list_action">
			<field name="name">Lista De Clientes</field>
			<field name="res_model">clientes.cliente</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Crear el primer cliente</p>
			</field>
		</record>

		<menuitem id="clientes_menu_principal" name="GESTIÓN DEL CLIENTES"/>
		<menuitem id="submenu_clientes_general" parent="clientes_menu_principal" name="GENERAL"/>
		<menuitem id="submenu_cliente" name="Clientes" parent="submenu_clientes_general" action="cliente_list_action"/>
	</data>
</openerp>